@model Personel

<form class="formSerialize" id="personelForm" action="/personel/kaydet">
    <!--begin::Body-->
    <div class="card-body">

        <input type="hidden" name="PersonelId" value="@Model.PersonelId" />

        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Departman</label>
            <div class="col-lg-9 col-xl-6">
                <select class="form-control selectpicker" name="DepartmanId">
                    <option value="">Seçiniz</option>
                    @foreach (var item in baseDepartman)
                    {
                        var slc = item.DepartmanId == Model.DepartmanId ? "selected" : "";
                        <option @slc value="@item.DepartmanId">@item.Adi</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Tip</label>
            <div class="col-lg-9 col-xl-6">
                <select class="form-control selectpicker" name="PersonelTipId">
                    <option value="">Seçiniz</option>
                    @foreach (var item in basePersonelTip)
                    {
                        var slc = item.PersonelTipId == Model.PersonelTipId ? "selected" : "";
                        <option @slc value="@item.PersonelTipId">@item.Adi</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Ad Soyad</label>
            <div class="col-lg-9 col-xl-6">
                <input class="form-control form-control-lg form-control-solid" type="text" name="Adi" value="@Model.Adi" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Kod</label>
            <div class="col-lg-9 col-xl-6">
                <input class="form-control form-control-lg form-control-solid" type="text" name="Kod" value="@Model.Kod" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Ünvan</label>
            <div class="col-lg-9 col-xl-6">
                <input class="form-control form-control-lg form-control-solid" type="text" name="Unvan" value="@Model.Unvan" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Eposta</label>
            <div class="col-lg-9 col-xl-6">
                <input class="form-control form-control-lg form-control-solid" type="text" name="Eposta" value="@Model.Eposta" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xl-3 col-lg-3 col-form-label">Telefon</label>
            <div class="col-lg-9 col-xl-6">
                <input class="form-control form-control-lg form-control-solid" type="text" name="Telefon" value="@Model.Telefon" />
            </div>
        </div>



    </div>
    <!--end::Body-->
</form>

 